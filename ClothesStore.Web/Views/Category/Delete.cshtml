@model ClothesStore_Entities.Category
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<h4>Are you sure you want to delete this category?</h4>
<form method="post">
    <input type="hidden" name="Id" value="@Model.ID" />
    <label id="lbName"> @Model.Name</label>

    <br />
    <label id="lbDescription">@Model.Description</label>

    <br />
    <button type="submit" class="btn btn-danger">Yes</button>
    <a href="/Index" class="btn btn-info" >No</a>
</form>
